<UserControl x:Class="SDBS3000.Ucs.pCircle"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SDBS3000.Ucs"
             mc:Ignorable="d" SizeChanged="UserControl_SizeChanged"
             d:DesignHeight="357" d:DesignWidth="357" x:Name="uc">
    <Grid>
        <Grid.Resources>
          
         

            <Style x:Key="circlelinepath" TargetType="{x:Type Path}">
                <Setter Property="Stroke" Value="{StaticResource circlelinesolid}"/>
                <Setter Property="StrokeThickness" Value="0.25"/>
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            </Style>

           
            <SolidColorBrush x:Key="circlevaluesolid" Color="{StaticResource circlevalue}"/>
            <RadialGradientBrush x:Key="measurecirvalue" GradientOrigin="0.5,0.5">
                <GradientStop Offset="0" Color="{StaticResource circlevalue}"/>
                <GradientStop Offset="0.6" Color="{StaticResource circlevalue}"/>
                <GradientStop Offset="0.6" Color="Transparent"/>
                <GradientStop Offset="1" Color="Transparent"/>
            </RadialGradientBrush>

            <Style x:Key="circlelinepath1" TargetType="{x:Type Path}">
                <Setter Property="Stroke" Value="Black"/>
                <Setter Property="StrokeThickness" Value="0.5"/>
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            </Style>
            <RotateTransform x:Key="angel30" Angle="30"/>
            <RotateTransform x:Key="angel60" Angle="60"/>

            
            <Style x:Key="measurecircle" TargetType="{x:Type Ellipse}">
                <Setter Property="Fill" Value="Transparent"/>
                <Setter Property="StrokeThickness" Value="1"/>
                <Setter Property="Stroke" Value="Black"/>
                <Setter Property="Height" Value="357"/>
                <Setter Property="Width" Value="357"/>
            </Style>
            <Style x:Key="measurecircleOK" TargetType="{x:Type Ellipse}">
                <Setter Property="Fill" Value="LightGray"/>
                <Setter Property="Height" Value="70"/>
                <Setter Property="Width" Value="70"/>
                <Setter Property="StrokeThickness" Value="2"/>
            </Style>
            <Style x:Key="measurecirclevalue" TargetType="{x:Type Ellipse}">
                <Setter Property="Fill" Value="Black"/>
                <Setter Property="Height" Value="20"/>
                <Setter Property="Width" Value="20"/>
            </Style>
        </Grid.Resources>
        <Grid RenderTransformOrigin="0.5,0.5" x:Name="circlegrid">
            <Grid.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="270" CenterX="0" CenterY="0"/>
                    <TranslateTransform/>
                    <ScaleTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Grid x:Name="cirvalue" Panel.ZIndex="4" Width="23" Height="23" >
                <Ellipse x:Name="cirred" Style="{DynamicResource measurecirclevalue}" Width="{Binding ElementName=cirvalue ,Path=ActualWidth}" Height="{Binding ElementName=cirvalue ,Path=ActualWidth}"/>
                <Path x:Name="pred" Data="M7,11.5 L16,11.5M11.5,7 L11.5,16" Stroke="Black" StrokeThickness="2" Stretch="None"/>
            </Grid>
            <Grid x:Name="grid" RenderTransformOrigin="0.5,0.5">
                <Ellipse x:Name="cir" Style="{StaticResource measurecircle}"/>
                <Ellipse x:Name="cir1" Style="{StaticResource measurecircle}"/>
                <Ellipse x:Name="cir2" Style="{StaticResource measurecircle}"/>
                <Ellipse x:Name="cir3" Style="{StaticResource measurecircle}"/>
                <Path x:Name="p1" Data="M5,178.5 L352 178.5M178.5,5 L178.5 352" Style="{StaticResource circlelinepath1}"/>
                <Path x:Name="p2" Data="M5,178.5 L352 178.5M178.5,5 L178.5 352" Style="{StaticResource circlelinepath1}" RenderTransform="{StaticResource angel30}"/>
                <Path x:Name="p3" Data="M5,178.5 L352 178.5M178.5,5 L178.5 352" Style="{StaticResource circlelinepath1}" RenderTransform="{StaticResource angel60}"/>
                <Ellipse x:Name="cirOK" Style="{StaticResource measurecircleOK}" Panel.ZIndex="3" Opacity="0.9"/>
                <Path x:Name="sector" Visibility="Hidden" Data="M178.5,178.5L175,6A178,178,0,0,1,182,6L178.5,178.5" Fill="White" Panel.ZIndex="2"/>
            </Grid>
        </Grid>

    </Grid>
</UserControl>
