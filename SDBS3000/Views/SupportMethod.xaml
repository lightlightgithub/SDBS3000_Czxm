<Window x:Class="SDBS3000.Views.SupportMethod"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SDBS3000.Views"
        xmlns:loc="clr-namespace:SDBS3000.Resources"
        mc:Ignorable="d" Name="sup" WindowState="Maximized"
        DataContext="{Binding Source={StaticResource Locator},Path=RtSet}"
        Title="SupportMethod" 
        WindowStyle="None" ResizeMode="NoResize" BorderThickness="1,0,1,1" WindowStartupLocation="CenterScreen"
        BorderBrush="Transparent" Background="Transparent" AllowsTransparency="True" Loaded="Sup_Loaded" Closed="Sup_Closed">
    <Viewbox>
        <Grid Width="1920" Height="1080">
            <Border CornerRadius="20" Background="{DynamicResource tipBg1}"  Width="1520" Height="910">
                <Grid Width="1520" Height="910">
                    <Grid.Resources>                        
                        <Style TargetType="{x:Type RadioButton}">
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Foreground" Value="{DynamicResource txtColor1}"/>
                            <Setter Property="FontSize" Value="19"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type RadioButton}">
                                        <Grid x:Name="templateRoot" SnapsToDevicePixels="True" Background="{DynamicResource uncheck}">
                                            <Grid x:Name="markGrid">
                                                <Ellipse Visibility="Hidden" x:Name="optionMark" MinWidth="6" MinHeight="6" Opacity="0"/>
                                            </Grid>
                                            <ContentPresenter x:Name="contentPresenter" Grid.Column="1" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                            <Image Source="{Binding Tag, RelativeSource={RelativeSource AncestorType={x:Type RadioButton}, Mode=FindAncestor}}" Stretch="None"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="true">
                                                <Setter Property="Background" TargetName="templateRoot" Value="{DynamicResource check}"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="{x:Null}">
                                                <Setter Property="Background" TargetName="templateRoot" Value="{DynamicResource uncheck}"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="false">
                                                <Setter Property="Opacity" TargetName="templateRoot" Value="0.4"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                        <!--<Style TargetType="{x:Type Button}" x:Key="NormalButtonStyle">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FontSize" Value="18"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="border" Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter TargetName="border" Property="Background" Value="#FF4C6C99"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter TargetName="border" Property="Background" Value="#FF2E5387"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>-->
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="700"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Background="{DynamicResource tipBg}" Opacity="0.8" CornerRadius="20,20,0,0"/>
                    <Label Content="{Binding [cutmode], Source={x:Static loc:LanguageManager.Instance}}" Foreground="{DynamicResource txtColor1}" FontSize="27" VerticalContentAlignment="Center" Padding="45,5,0,0" FontWeight="Bold"/>
                    <Button Grid.Column="2" Command="{Binding CloseSupportMethod}" CommandParameter="{Binding ElementName=sup}" Style="{StaticResource NormalButtonStyle}" Height="40" Width="40" HorizontalAlignment="Right" Margin="0,0,30,0">
                        <Canvas>
                            <Line X1="-15" Y1="-15" X2="15" Y2="15" Fill="{DynamicResource txtColor1}" Stroke="{DynamicResource txtColor1}" StrokeThickness="2"/>
                            <Line X1="-15"  Y1="15"  X2="15" Y2="-15" Fill="{DynamicResource txtColor1}" Stroke="{DynamicResource txtColor1}" StrokeThickness="2"/>
                        </Canvas>
                    </Button>
                    <UniformGrid Grid.Row="1" Columns="4" Margin="10,0,10,0" Name="gropu" Rows="3">
                        <RadioButton Width="350" Height="200" Tag="/SDBS3000;component/Utils/Image/SupMet/s1.png" Content="{Binding [Mode 1], Source={x:Static loc:LanguageManager.Instance}}"/>
                        <RadioButton Width="350" Height="200" Tag="/SDBS3000;component/Utils/Image/SupMet/s2.png" Content="{Binding [Mode 2], Source={x:Static loc:LanguageManager.Instance}}"/>
                        <RadioButton Width="350" Height="200" Tag="/SDBS3000;component/Utils/Image/SupMet/s3.png" Content="{Binding [Mode 3], Source={x:Static loc:LanguageManager.Instance}}"/>
                        <RadioButton Width="350" Height="200" Tag="/SDBS3000;component/Utils/Image/SupMet/s4.png" Content="{Binding [Mode 4], Source={x:Static loc:LanguageManager.Instance}}"/>
                        <RadioButton Width="350" Height="200" Tag="/SDBS3000;component/Utils/Image/SupMet/s5.png" Content="{Binding [Mode 5], Source={x:Static loc:LanguageManager.Instance}}"/>
                        <RadioButton Width="350" Height="200" Tag="/SDBS3000;component/Utils/Image/SupMet/s6.png" Content="{Binding [Mode 6], Source={x:Static loc:LanguageManager.Instance}}"/>
                        <RadioButton Width="350" Height="200" Tag="/SDBS3000;component/Utils/Image/SupMet/s7.png" Content="{Binding [Mode 7], Source={x:Static loc:LanguageManager.Instance}}"/>
                        <RadioButton Width="350" Height="200" Tag="/SDBS3000;component/Utils/Image/SupMet/s8.png" Content="{Binding [Mode 8], Source={x:Static loc:LanguageManager.Instance}}"/>
                        <RadioButton Width="350" Height="200" Tag="/SDBS3000;component/Utils/Image/SupMet/s9.png" Content="{Binding [Mode 9], Source={x:Static loc:LanguageManager.Instance}}"/>
                        <RadioButton Width="350" Height="200" Tag="/SDBS3000;component/Utils/Image/SupMet/s10.png" Content="{Binding [Mode 10], Source={x:Static loc:LanguageManager.Instance}}"/>
                        <RadioButton Width="350" Height="200" Tag="/SDBS3000;component/Utils/Image/SupMet/s11.png" Content="{Binding [Mode 11], Source={x:Static loc:LanguageManager.Instance}}"/>
                    </UniformGrid>
                    <Button Command="{Binding SaveSupportMethod}" CommandParameter="{Binding ElementName=sup}" Margin="595,802,770,52" Content="{Binding [confirm], Source={x:Static loc:LanguageManager.Instance}}" Background="{StaticResource confirm}" Grid.RowSpan="3" Style="{StaticResource btnselect}"/>
                    <Button Command="{Binding CloseSupportMethod}" CommandParameter="{Binding ElementName=sup}" Margin="815,802,550,52" Content="{Binding [cancel], Source={x:Static loc:LanguageManager.Instance}}" BorderBrush="#DF2121" Background="{StaticResource qx}" Grid.RowSpan="3" Style="{StaticResource btnselect}"/>
                </Grid>
            </Border>
        </Grid>
    </Viewbox>
</Window>
