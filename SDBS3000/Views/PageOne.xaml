<Page x:Class="SDBS3000.Views.PageOne"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SDBS3000.Views"
      DataContext="{Binding Source={StaticResource Locator},Path=WinMeasure}"
      xmlns:uc1="clr-namespace:SDBS3000.Ucs;assembly=SDBS3000.Ucs"
      xmlns:loc="clr-namespace:SDBS3000.Resources"
      xmlns:converters="clr-namespace:SDBS3000.Utils.Converters"
      mc:Ignorable="d"
      d:DesignHeight="880" d:DesignWidth="1920"
      Title="PageOne">
    <Page.Resources>
        <converters:Getcutimage x:Key="cutmode"/>
    </Page.Resources>
    <Grid>
        <Viewbox Stretch="Fill" StretchDirection="Both">
            <Grid Height="880" Width="1920">
                <Popup IsOpen="{Binding OK}" Placement="Center" x:Name="okpop" StaysOpen="False" VerticalOffset="-150">
                    <Grid Background="#1FD83F" Width="400" Height="300">
                        <Label Content="OK" FontSize="200" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Grid>
                </Popup>
                <Popup IsOpen="{Binding NG}" Placement="Center"  x:Name="ngpop" StaysOpen="False" VerticalOffset="-150">
                    <Grid Background="#FF0000" Width="400" Height="300">
                        <Label Content="NG" FontSize="200" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Grid>
                </Popup>
                <Image Width="58" Height="27" Margin="36,266,1727,587" Source="{Binding Cut0,Mode=TwoWay,Converter={StaticResource cutmode}}"/>
                <ProgressBar x:Name="leftpro" Style="{StaticResource ProgressBarStyle1}" Margin="36,319,1727,289" Value="{Binding Data0.singleL}"/>
                <ProgressBar x:Name="pbpro" Style="{StaticResource ProgressBarStyle2}" Margin="0,30,0,826" Value="{Binding Progress}"/>
                <local:MeaTable x:Name="middlecircle" Width="808" Height="320" Margin="989,291,123,272" Logotype="2" LabelContent="{Binding [Static Unbalance], Source={x:Static loc:LanguageManager.Instance}}"  CurrentValue="{Binding Data0.fm}" CurrentAngle="{Binding Data0.qm}" LastValue="{Binding Data1.fm}" LastAngle="{Binding Data1.qm}"  ShowUnit="{Binding Rotor.Yxldw}"  Yxl="{Binding Rotor.Jyxl}"  SliderValue="{Binding Data0.singleL}"  Decinum="{Binding Decnum}"/>
            </Grid>
        </Viewbox>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="357*"/>
                <ColumnDefinition Width="405*"/>
                <ColumnDefinition Width="1159*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="282*"/>
                <RowDefinition Height="365*"/>
                <RowDefinition Height="146*"/>
                <RowDefinition Height="90*"/>
            </Grid.RowDefinitions>
            <uc1:Circle x:Name="lc" Grid.Column="1" Grid.Row="1" MeaValue="{Binding Data0.fm}" Angel="{Binding Data0.qm}" MaxValue="{Binding Rotor.Jyxl}" Direction="{Binding Direction}"  Nee="{Binding Nee}"/>
            <Grid Grid.Row="3" Grid.ColumnSpan="10" Background="#02A5FF" Opacity="0.2">
            </Grid>
            <local:UserStatusBar Grid.Row="4"  Style="{StaticResource UserStatusBarStyle1}"/>
        </Grid>
    </Grid>
</Page>
