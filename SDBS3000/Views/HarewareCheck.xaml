<Window x:Class="SDBS3000.Views.HarewareCheck"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SDBS3000.Views"
        xmlns:loc="clr-namespace:SDBS3000.Resources"         
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d" WindowState="Maximized"
        WindowStyle="None" ResizeMode="NoResize" BorderThickness="1,0,1,1" WindowStartupLocation="CenterScreen"
        Title="HardwareCheck" Height="450" Width="800" BorderBrush="Transparent" Background="Transparent">
    <Viewbox>
        <Grid Width="1920" Height="1080">
            <Grid.Resources>
                <ImageBrush x:Key="txtpict" ImageSource="/SDBS3000;component/Utils/Image/User/输入框3.png" Stretch="Fill"/>
                <Style TargetType="WrapPanel">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="24"/>
                    <Setter Property="Width" Value="180"/>
                    <Setter Property="Height" Value="auto"/>
                    <Setter Property="MaxHeight" Value="60"/>
                    <Setter Property="Foreground" Value="{DynamicResource txtColor1}"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="TextWrapping" Value="Wrap"/>
                </Style>


                <Style TargetType="TextBox">
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="22"/>
                    <Setter Property="Height" Value="60"/>
                    <Setter Property="Foreground" Value="{DynamicResource txtColor1}"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="20,0,0,0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                    <Setter Property="CaretBrush" Value="{DynamicResource txtColor1}"/>
                </Style>
            </Grid.Resources>
                     <Border x:Name="ISO_Border" CornerRadius="10" Background="{DynamicResource tipBg}" Width="800" Height="450" Focusable="True" Grid.Column="1" Margin="456,315,560,315">
                <Grid Width="800" Height="450">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="12*"/>
                        <RowDefinition Height="12*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="12*"/> 
                    </Grid.RowDefinitions>
                    <Border  CornerRadius="0,0,10,10" Grid.Row="1" Grid.RowSpan="6" Background="{DynamicResource tipBg1}"></Border>
                    <Label Content="硬件自检" Foreground="{DynamicResource txtColor1}" FontSize="24" VerticalContentAlignment="Center" Padding="45,5,0,0"/>
                    <Button x:Name="GuanBiBtn" Style="{StaticResource NormalButtonStyle}" Height="40" Width="40" HorizontalAlignment="Right" Margin="0,10,30,0" VerticalAlignment="Top" Click="Button_Click" Command="{Binding ISOClose}">
                        <Canvas>
                            <Line X1="-15" Y1="-15" X2="15" Y2="15" Fill="{DynamicResource txtColor1}" Stroke="{DynamicResource txtColor1}" StrokeThickness="2"/>
                            <Line X1="-15"  Y1="15"  X2="15" Y2="-15" Fill="{DynamicResource txtColor1}" Stroke="{DynamicResource txtColor1}" StrokeThickness="2"/>
                        </Canvas>
                    </Button>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="1"  Text="数据采集卡"/>
                        <Image  Grid.Column="2" Source="{DynamicResource accessIcon}" Stretch="Uniform" Width="59"></Image>
                        <Image  Grid.Column="2" Source="{DynamicResource failIcon}"  Stretch="Uniform" Width="50"></Image>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="1"  Text="控制板"/>
                        <Image  Grid.Column="2"  Source="{DynamicResource accessIcon}" Stretch="Uniform" Width="59"></Image>
                        <Image  Grid.Column="2" Source="{DynamicResource failIcon}"  Stretch="Uniform" Width="50"></Image>
                    </Grid>
                     
                    <WrapPanel Grid.Row="3">
                        <Label Content="自检完成！" HorizontalContentAlignment="Center" FontSize="28"/>
                    </WrapPanel>
                    <WrapPanel Grid.Row="4">
                        <Button Width="120" Click="Button_Click" Height="40" FontSize="20" Margin="20" Style="{DynamicResource btnselect}" Content="开始自检"/>
                        <Button Width="120" Command="{Binding ISOCalculate}" Height="40" FontSize="20" Margin="20" Style="{DynamicResource btnselect}" Content=" 退出"/>
                    </WrapPanel>
                </Grid>
            </Border>
        </Grid>
    </Viewbox>
</Window>
