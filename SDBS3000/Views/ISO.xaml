<Window x:Class="SDBS3000.Views.ISO"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SDBS3000.Views"
        xmlns:loc="clr-namespace:SDBS3000.Resources"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d" Name="sup"
        DataContext="{Binding Source={StaticResource Locator},Path=RtSet}"
        Title="Authorization" WindowState="Maximized"
        WindowStyle="None" ResizeMode="NoResize" BorderThickness="1,0,1,1" WindowStartupLocation="CenterScreen"
        BorderBrush="Transparent" Background="Transparent" AllowsTransparency="True">
    <Window.Resources>
        <RoutedUICommand x:Key="GuanBi" Text="关闭"/>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Modifiers="Ctrl" Key="C" Command="{Binding ISOCalculate}"/>
        <KeyBinding Modifiers="Ctrl" Key="Q" Command="{StaticResource GuanBi}"/>
    </Window.InputBindings>
    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource GuanBi}" Executed="CmdBinding_CtrlX"/>
    </Window.CommandBindings>
    <Viewbox>
        <Grid Width="1920" Height="1080">
            <Grid.Resources>
                <ImageBrush x:Key="txtpict" ImageSource="/SDBS3000;component/Utils/Image/User/输入框3.png" Stretch="Fill"/>
                <Style TargetType="WrapPanel">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="Width" Value="180"/>
                    <Setter Property="Height" Value="auto"/>
                    <Setter Property="MaxHeight" Value="60"/>
                    <Setter Property="Foreground" Value="{DynamicResource txtColor1}"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="TextWrapping" Value="Wrap"/>
                </Style>
                
           
                <Style TargetType="TextBox">
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="22"/>
                    <Setter Property="Height" Value="60"/>
                    <Setter Property="Foreground" Value="{DynamicResource txtColor1}"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="20,0,0,0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                    <Setter Property="CaretBrush" Value="{DynamicResource txtColor1}"/>
                </Style>
            </Grid.Resources>
            <Border x:Name="ISO_Border" CornerRadius="10" Background="{DynamicResource tipBg}" Width="800" Height="450" Focusable="True">
                <Grid Width="800" Height="450">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Border  CornerRadius="0,0,10,10" Grid.Row="1" Grid.RowSpan="6" Background="{DynamicResource tipBg1}"></Border>
                    <Label Content="{Binding [isocal], Source={x:Static loc:LanguageManager.Instance}}" Foreground="{DynamicResource txtColor1}" FontSize="24" VerticalContentAlignment="Center" Padding="45,5,0,0"/>
                    <Button x:Name="GuanBiBtn" Style="{StaticResource NormalButtonStyle}" Height="40" Width="40" HorizontalAlignment="Right" Margin="0,10,30,0" VerticalAlignment="Top" Click="Button_Click" Command="{Binding ISOClose}">
                        <Canvas>
                            <Line X1="-15" Y1="-15" X2="15" Y2="15" Fill="{DynamicResource txtColor1}" Stroke="{DynamicResource txtColor1}" StrokeThickness="2"/>
                            <Line X1="-15"  Y1="15"  X2="15" Y2="-15" Fill="{DynamicResource txtColor1}" Stroke="{DynamicResource txtColor1}" StrokeThickness="2"/>
                        </Canvas>
                    </Button>
                    <WrapPanel Grid.Row="1">
                        <TextBlock  Text="{Binding [balancinggrade], Source={x:Static loc:LanguageManager.Instance}}"/>
                        <ComboBox Text="{Binding Phdj}" PreviewTextInput="Phdj_PreviewTextInput" Width="250" Height="60" IsEditable="True" Style="{DynamicResource ComboBoxStyle2}" ItemContainerStyle="{DynamicResource ComboBoxItemStyle2}" x:Name="phdj"   FontSize="24" Panel.ZIndex="1" IsDropDownOpen="True">
                            <ComboBoxItem Content="0.4"/>
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2.5"/>
                            <ComboBoxItem Content="6.3"/>
                            <ComboBoxItem Content="16"/>
                            <ComboBoxItem Content="40"/>
                            <ComboBoxItem Content="100"/>
                            <ComboBoxItem Content="250"/>
                            <ComboBoxItem Content="630"/>
                            <ComboBoxItem Content="1600"/>
                            <ComboBoxItem Content="4000"/>
                            <ComboBox.Resources>
                                <Style TargetType="ScrollBar" BasedOn="{StaticResource ScrollStyle_Mobile}"></Style>
                                <!--纵向滚动条宽度-->
                                <sys:Double   x:Key="VerticalScrollBarThickness">12</sys:Double>
                                <!--纵向滑块圆角-->
                                <CornerRadius x:Key="VerticalThumbCornerRadius">5</CornerRadius>
                            </ComboBox.Resources>
                        </ComboBox>
                    </WrapPanel>
                    <WrapPanel Grid.Row="2" VerticalAlignment="Center">
                        <TextBlock Text="{Binding [workspeed], Source={x:Static loc:LanguageManager.Instance}}"/>
                        <TextBox  Text="{Binding Gzzs}" InputMethod.IsInputMethodEnabled="False"  PreviewTextInput="TextBox_PreviewTextInput" Width="250" Background="{StaticResource txtpict}" Panel.ZIndex="1"></TextBox>
                    </WrapPanel>
                    <WrapPanel Grid.Row="3">
                        <TextBlock Text="{Binding [rotormass], Source={x:Static loc:LanguageManager.Instance}}"/>
                        <TextBox  Text="{Binding Gjzl}"  InputMethod.IsInputMethodEnabled="False" PreviewTextInput="TextBox_PreviewTextInput" Width="250" Background="{StaticResource txtpict}" Panel.ZIndex="1"></TextBox>
                    </WrapPanel>
                    <WrapPanel Grid.Row="4">
                        <Button Width="120" Command="{Binding ISOCalculate}" Height="40" FontSize="20" Margin="20" Style="{DynamicResource btnselect}" Content="{Binding [calculate], Source={x:Static loc:LanguageManager.Instance}}"/>
                     </WrapPanel>
                </Grid>
            </Border>
        </Grid>
    </Viewbox>
</Window>
